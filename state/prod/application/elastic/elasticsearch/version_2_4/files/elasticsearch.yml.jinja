{% set data = salt['pillar.get']('elastic:elasticsearch:elasticsearch') -%}
# {{ grains['id']}}
cluster:
  name: {{ data['cluster']['name'] }}

node:
  name: {{ data['node']['name'] }}
  master: {{ data['node']['master'] }}
  data: {{ data['node']['data'] }}
  tag: {{ data['node']['tag'] }}

path:
  data: {{ data['path']['data'] }}
  repo: {{ data['path']['repo'] }}

bootstrap:
  mlockall: {{ data['bootstrap']['mlockall'] }}

network:
  host: {{ data['network']['host'] }}

http:
  port: {{ data['http']['port'] }}
  max_initial_line_length: {{ data['http']['max_initial_line_length'] }}

discovery:
  zen:
    ping:
      unicast:
        hosts: {{ data['discovery']['zen']['ping']['unicast']['hosts'] }}
    minimum_master_nodes: {{ data['discovery']['zen']['minimum_master_nodes'] }}

index:
  number_of_shards: {{ data['index']['number_of_shards'] }}
  mapper:
    dynamic: {{ data['index']['mapper']['dynamic'] }}
  translog:
    durability: {{ data['index']['translog']['durability'] }}
  refresh:
    interval: {{ data['index']['refresh']['interval'] }}
  merge:
    scheduler:
      max_thread_count: {{ data['index']['merge']['scheduler']['max_thread_count'] }}
    policy:
      floor_segment: {{ data['index']['merge']['policy']['floor_segment'] }}
  fielddata:
    cache:
      size: {{ data['index']['fielddata']['cache']['size'] }}

indices:
  store:
    throttle:
      max_bytes_per_sec: {{ data['indices']['store']['throttle']['max_bytes_per_sec'] }}
